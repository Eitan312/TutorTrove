<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36594a">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Assign Yourself"
            android:textSize="28dp"
            android:gravity="center"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/displayDatesTv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="* assignment is between {0} - {1}"
            android:textSize="15dp"
            android:gravity="center"
            android:fontFamily="sans-serif"/>

        <Spinner
            android:id="@+id/dayAssignSpinner"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
    
        <ScrollView
            android:id="@+id/assignSv"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/Llassign"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
        </ScrollView>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <Button
                    android:id="@+id/btnSaveAssign"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Save"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:background="@drawable/buttonStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"/>
                <Button
                    android:layout_marginLeft="30dp"
                    android:id="@+id/btnReturnAssign"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Return"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:background="@drawable/buttonStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
        
        </LinearLayout>
</LinearLayout>
