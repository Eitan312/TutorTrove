<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36594a">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fill What You Want To Update"
        android:textSize="25dp"
        android:gravity="center"
        android:fontFamily="serif"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
             <ImageButton
                android:id="@+id/ibUpdatePfp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
             <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnSelectImg"
                    android:layout_marginRight="25dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Select Image"
                    android:textAllCaps="false"
                    android:textSize="19dp"/>
                <Button
                    android:id="@+id/btnCaptureImg"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Capture Image"
                    android:textAllCaps="false"
                    android:textSize="19dp"/>
            </LinearLayout>
            <Button
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/btnUpdatePfp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textSize="19dp"/>
             <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <EditText
                    android:id="@+id/etUpdateFname"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:hint="Full Name"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:text=""/>
                <Button
                    android:id="@+id/btnUpdateFname"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textSize="19dp"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Spinner
                    android:id="@+id/spUpdateCity"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="50dp"/>
                <Button
                    android:id="@+id/btnUpdateCity"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textSize="19dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <EditText
                    android:id="@+id/etUpdateEmail"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:hint="Email"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:text=""/>
                <Button
                    android:id="@+id/btnUpdateEmail"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textSize="19dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/tvUpdateAge"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity="center"
                    android:fontFamily="serif"/>
                <Button
                    android:id="@+id/btnSelectAge"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Select Age"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:id="@+id/btnUpdateAge"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textSize="18dp"/>
            </LinearLayout>
            <Button
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                    android:id="@+id/btnUpdatePassword"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:background="@drawable/buttonstyle"
                    android:text="Update Password"
                    android:textAllCaps="false"
                    android:textSize="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
