<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36594a">

    <LinearLayout
        android:id="@+id/lChoice"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Are You A Student Or A Teacher?"
            android:textSize="27dp"
            android:fontFamily="sans-serif"
            android:gravity="center"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/studentBtn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/student"/>
            <ImageButton
                android:id="@+id/teacherBtn"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/teacher"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/svSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Please Fill All The Following Fields"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/fNameEt"
                android:background="@drawable/buttonstyle"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Full Name"/>
            <TextView
                android:id="@+id/fnameTv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Name Is Invalid!"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/emailEt"
                android:background="@drawable/buttonstyle"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Email"/>
            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Email Is Invalid!"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"/>
            <Spinner
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/citySpinner"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/linearLayout1">
                <RadioButton
                    android:id="@+id/maleRb"
                    android:checked="false"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="Male"
                    android:textSize="18dp"
                    android:layout_marginRight="25dp"/>
                <RadioButton
                    android:id="@+id/femaleRb"
                    android:checked="false"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Female"
                    android:textSize="18dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/phoneEt"
                android:background="@drawable/buttonstyle"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Phone Number"/>
            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Phone Is Invalid!"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center">
                <TextView
                    android:gravity="center"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:text="Click To Select An Age:"
                    android:textSize="20dp"/>
                <ImageButton
                    android:layout_marginRight="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/calendarIb"
                    android:background="@drawable/calendar"/>
                <TextView
                    android:id="@+id/birthdayTv"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Birthday:"/>
            </LinearLayout>
            <TextView
                android:id="@+id/ageTv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Age Is Invalid!"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Click To Select a profile picture (not required):"
                android:gravity="center"
                android:textSize="20dp"
            android:layout_marginBottom="5dp"/>
            <ImageButton
                android:id="@+id/ibPfp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/pfp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:text="Upload Image"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:background="@drawable/buttonstyle"/>
                <Button
                    android:id="@+id/btnCapture"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:text="Capture Image"
                    android:textAllCaps="false"
                    android:textSize="16dp"
                    android:background="@drawable/buttonstyle"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Enter Description (Optional)"
                android:textSize="20dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/etDescription"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:gravity="top"
                android:hint="description"/>
            <EditText
                android:id="@+id/passEt"
                android:background="@drawable/buttonstyle"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Password"/>
            <TextView
                android:id="@+id/passTv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Password has to be at least 8 characters long and contain only letters and numbers"
                android:textSize="13dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"/>
            <EditText
                android:id="@+id/cPassEt"
                android:background="@drawable/buttonstyle"
                android:gravity="center"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Confirm Password"/>
            <TextView
                android:id="@+id/cPassTv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Passwords do not match!"
                android:textSize="17dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible"/>
                <Button
                    android:id="@+id/signUpBtn"
                    android:text="Sign Up"
                    android:textSize="15dp"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:fontFamily="serif"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buttonStyle"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
