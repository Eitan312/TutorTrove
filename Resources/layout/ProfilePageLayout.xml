<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36594a">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
        android:id="@+id/ibProfilePic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="260dp">
            <TextView
                android:id="@+id/tvPfName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif"
                android:text="Name: "
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvPfAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif"
                android:text="Age: "
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvPfCity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif"
                android:text="City: "
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvPfEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif"
                android:text="Email: "
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvPfGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="serif"
                android:text="Gender: "
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvPfDescription"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/rateBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Rate"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:background="@drawable/buttonstyle"/>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <Button
            android:layout_gravity="center"
            android:id="@+id/viewRateBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="View Ratings"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/buttonstyle"/>
        <Button
            android:layout_gravity="center" 
            android:id="@+id/viewLessonBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="View Lessons"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/buttonstyle"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
